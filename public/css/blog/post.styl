/*post list*/
.post-list
  min-width: 700px
  max-width: 900px
  margin: 0 auto

.post-list .post
  margin: 30px 0
  padding: 20px 40px
  border-radius: 2px
  border-top: 1px solid #f5f5f5
  border-bottom: 1px solid #eee
  box-shadow: 6px 8px 6px #f5f5f5

.post-list .post h2
  transition: all 0.3s

.post-list .post h2:hover
  margin-left: 0.1em

.post-list .post h2 a
  text-decoration: none
  color: #444
  border-bottom: 1px solid transparent
  transition: all 0.3s

.post-list .post h2 a:hover
  border-bottom: 1px solid #aaa
  color: #444

.post-list .post img
  max-width: 100%
  vertical-align: top

.post-list footer,
.post-list .time
  font-size: small
  color: #bbb

.post-list .more
  color: #bbb

.post-list .more:hover
  color: #666

/*post detail*/
.post-detail
  min-width: 700px
  max-width: 900px
  margin: 0 auto
  min-height: 650px

.post-detail .content p
  text-indent: 2em

.post-detail .post-title
  padding: 20px 0
  border-bottom: 1px solid #dfdfdf
  text-align: center

.post-detail .time
  font-size: small
  color: #cdcdcd

.post-detail .content
  padding: 0 20px 80px



body
  background: #f5f5f5
  font: 14px "Helvetica Neue", Helvetica, '微软雅黑', sans-serif
  -webkit-text-size-adjust: 100%

#wrap
  position: relative

.outer
  padding-left: 220px
  max-width: 1280px

.outer:before,
.outer:after
  content: ""
  display: table

.outer:after
  clear: both

.left,
.alignleft
  float: left

.right,
.alignright
  float: right

.clear
  clear: both

#mobile-nav
  display: none

.article-category-link,
.archive-year
  text-decoration: none
  text-transform: uppercase
  letter-spacing: 2px
  color: #999
  margin-bottom: 1em
  margin-left: 5px
  line-height: 1em
  text-shadow: 0 1px #fff
  font-weight: bold

.article-entry h1,
.widget h1
  font-size: 2em

.article-entry h2,
.widget h2
  font-size: 1.5em

.article-entry h3,
.widget h3
  font-size: 1.3em

.article-entry h4,
.widget h4
  font-size: 1.2em







.article-date
  float: right
  color: #acacac
  text-decoration: none



.article-header
  padding: 20px

.article-title
  text-decoration: none
  font-size: 1.4em
  font-weight: bold
  color: #555
  line-height: 1.1em
  -webkit-transition: color 0.2s
  -moz-transition: color 0.2s
  -ms-transition: color 0.2s
  transition: color 0.2s

a.article-title:hover
  color: #333

.article-entry
  color: #555
  padding: 0 20px

.article-entry:before,
.article-entry:after
  content: ""
  display: table

.article-entry:after
  clear: both

.article-entry p,
.article-entry table
  line-height: 1.6em
  margin: 1.6em 0


.article-entry a
  color: #333

.article-entry a:hover
  text-decoration: underline



.article-more-link a
  display: inline-block
  line-height: 1em
  padding: 6px 15px
  -webkit-border-radius: 15px
  border-radius: 15px
  background: #f5f5f5
  color: #999
  text-shadow: 0 1px #fff
  text-decoration: none

.article-more-link a:hover
  background: #333
  color: #fff
  text-decoration: none
  text-shadow: 0 1px #292929

.article-footer
  font-size: 0.85em
  line-height: 1.6em
  border-top: 1px solid #ececec
  padding-top: 1.6em
  margin: 0 20px 20px

.article-footer:before,
.article-footer:after
  content: ""
  display: table

.article-footer:after
  clear: both

.article-footer a
  color: #999
  text-decoration: none

.article-footer a:hover
  color: #555

.article-tag-list-item
  float: left
  margin-right: 10px



#comments
  background: #fff
  padding: 20px
  border: 1px solid #ececec
  -webkit-border-radius: 3px
  border-radius: 3px
  margin: 50px 0

#comments a
  color: #333

.archives-wrap
  margin: 50px 0
  border-bottom: 1px dashed #ddd

.archives:before,
.archives:after
  content: ""
  display: table

.archives:after
  clear: both

.archive-year-wrap
  margin-bottom: 1em

.archive-article-inner
  padding: 10px
  border-color: #f00
  margin-bottom: 15px

.archive-article-title
  text-decoration: none
  font-weight: bold
  color: #555
  -webkit-transition: color 0.2s
  -moz-transition: color 0.2s
  -ms-transition: color 0.2s
  transition: color 0.2s
  line-height: 1.6em

.archive-article-title:hover
  color: #333

.archive-article-footer
  margin-top: 1em

.archive-article-date
  color: #999
  text-decoration: none
  font-size: 0.85em
  line-height: 1em
  margin-bottom: 0.5em
  display: block



